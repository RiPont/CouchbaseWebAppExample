@model CouchbaseWebAppExample.Models.ActivityNode
@using System.Diagnostics
@using CouchbaseWebAppExample.Models
@using Newtonsoft.Json.Linq
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<style>
    .ActivityNode {
        display: flex;
        flex-direction: column;
        border : 1px dotted black;
        padding : 0.25em;
    }

    .ActivityNode .duration {
        background-color: green;
    }

    .ActivityNode .OperationName {
        font-weight : bold;
    }

    .ActivityNode dl {
        display: flex;
        flex-flow: row wrap;
        border: solid #333;
        border-width: 1px 1px 0 0;
    }
    .ActivityNode dt {
        flex-basis: 20%;
        padding: 0.1em 0.2em text-align: right;
    }
    .ActivityNode dd {
        flex-basis: 70%;
        flex-grow: 1;
        margin: 0;
        padding: 0.1em 0.2em;
    }
</style>
<h1>Trace Viewer</h1>

<h2>@Model.OperationName (@Model.Id)</h2>

<partial name="ActivityNode" model="Model"/>
